<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:jsp="http://java.sun.com/xml/ns/javaee/jsp" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>EmpProject</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
  </welcome-file-list>
  <filter>
    <filter-name>EncodingFilter</filter-name>
    <filter-class>cn.yh.util.filter.EncodingFilter</filter-class>
    <init-param>
      <param-name>charset</param-name>
      <param-value>UTF-8</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>EncodingFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>lf</filter-name>
    <filter-class>cn.yh.filter.LoginFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>lf</filter-name>
    <url-pattern>/page/back/admin/dept/*</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>lf</filter-name>
    <url-pattern>/page/back/admin/emp/*</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>lf</filter-name>
    <url-pattern>/page/back/admin/main.jsp</url-pattern>
  </filter-mapping>
  <jsp-config>
    <taglib>
      <taglib-uri>http://www.mldn.cn/c</taglib-uri>
      <taglib-location>/WEB-INF/c.tld</taglib-location>
    </taglib>
  </jsp-config>
  <servlet>
    <servlet-name>login</servlet-name>
    <servlet-class>cn.yh.servlet.LoginServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>DeptServlet</servlet-name>
    <servlet-class>cn.yh.servlet.DeptServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>EmpServlet</servlet-name>
    <servlet-class>cn.yh.servlet.EmpServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>login</servlet-name>
    <url-pattern>/page/back/admin/html/login</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>DeptServlet</servlet-name>
    <url-pattern>/page/back/admin/dept/DeptServlet/*</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>EmpServlet</servlet-name>
    <url-pattern>/page/back/admin/emp/EmpServlet/*</url-pattern>
  </servlet-mapping>
</web-app>